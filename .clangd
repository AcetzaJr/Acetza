{
  "Index": {
    "Background": "Build"
  },
  "Completion": {
    "AllScopes": true
  },
  "InlayHints": {
    "BlockEnd": "Yes",
    "Designators": "Yes",
    "Enabled": "Yes",
    "ParameterNames": "Yes",
    "DeducedTypes": "Yes",
    "TypeNameLimit": 0
  },
  "Hover": {
    "ShowAKA": "Yes"
  },
  "Diagnostics": {
    "UnusedIncludes": "Strict",
    "MissingIncludes": "None",
    "ClangTidy": {
      "Add": [
        "clang-diagnostic*",
        "clang-analyzer*",
        "llvm-*",
        "performance*",
        "readability*",
        "cert*",
        "portability*",
        "misc*",
        "concurrency*",
        "google*",
        "bugprone*"
      ],
      "Remove": [
        "readability-magic-numbers",
        "misc-no-recursion",
        "concurrency-mt-unsafe",
        "cert-flp30-c",
        "cert-err33-c",
        "bugprone-easily-swappable-parameters",
        "performance-no-int-to-ptr"
      ],
      "FastCheckFilter": "Strict"
    }
  }
}